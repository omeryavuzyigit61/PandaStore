<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PandaStore" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/gray</item>

        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="SurfaceStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="android:background">@color/surface_color</item>
    </style>

    <style name="TextDescriptionStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="itemIconTint">@color/bottom_nav_item_colors</item>
        <item name="itemTextColor">@color/bottom_nav_item_colors</item>
        <item name="itemRippleColor">@null</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BackgroundScreen">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="ProfileMenuItem" parent="TextDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:drawableTint">@color/main_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#1FFFFFFF</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>
</resources>