<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/BackgroundScreen"
    android:padding="20dp">

    <View
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/btnEdit"
        style="@style/TextDescriptionStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DÃ¼zenle"
        android:textSize="18sp"
        android:padding="12dp"
        android:drawablePadding="10dp"
        app:drawableStartCompat="@android:drawable/ic_menu_edit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listeyi Sil"
        android:textSize="18sp"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:textColor="#D32F2F"
        app:drawableStartCompat="@android:drawable/ic_menu_delete" />

</LinearLayout>